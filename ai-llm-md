type TenantResponse struct {
  ID        string    `json:"id"`
  Slug      string    `json:"slug"`
  Name      string    `json:"name"`
  IsActive  bool      `json:"is_active"`
  CreatedAt time.Time `json:"created_at"`
  UserCount int       `json:"user_count"`
}
